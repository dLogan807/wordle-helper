<Window
    x:Class="WordleHelper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WordleHelper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="WordleHelper"
    Title="WordleHelper"
    Width="300"
    Height="450"
    MinWidth="300"
    MinHeight="450"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Border
            Background="#282D33"
            BorderBrush="#3A4149"
            BorderThickness="5"
            CornerRadius="8,8,0,8" />
        <Label
            x:Name="Guess"
            Grid.Row="0"
            Content="{Binding TextTest, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Width="200"
            Margin="10,37,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="{Binding TextTest, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
