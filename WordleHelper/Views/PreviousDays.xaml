<Window
  x:Class="WordleHelper.Views.PreviousDays"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:WordleHelper.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="PreviousDays"
  Width="400"
  Height="550"
  mc:Ignorable="d"
>
  <Grid>
    <Border Background="#282D33" BorderBrush="#3A4149" BorderThickness="5" CornerRadius="8,8,0,8" />
    <Label x:Name="Guess" Grid.Row="0" Content="Previous Wordles" />
    <Button
      Margin="322,45,19,471"
      Padding="5"
      VerticalContentAlignment="Center"
      Content="Back"
      FontSize="12"
    />
    <ListView x:Name="PrevWordList" Margin="10,45,184,191">
      <ListView.View>
        <GridView>
          <GridViewColumn Width="100" Header="Day" />
          <GridViewColumn Width="100" Header="Word" />
        </GridView>
      </ListView.View>
    </ListView>
  </Grid>
</Window>
